<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/chessPicLayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:alpha="0.9"
    android:background="@color/black"
    android:textAlignment="center"
    tools:context=".ChessPicActivity">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/buttonLayoutCP"
        android:layout_width="412dp"
        android:layout_height="159dp"
        android:visibility="visible"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.0">

        <TextView
            android:id="@+id/descriptionText"
            android:layout_width="299dp"
            android:layout_height="39dp"
            android:layout_marginStart="98dp"
            android:layout_marginTop="85dp"
            android:layout_marginEnd="16dp"
            android:layout_marginBottom="24dp"
            android:autofillHints=""
            android:ems="10"
            android:text="@string/drawing_description_text"
            android:textAlignment="textStart"
            android:textColor="@color/white"
            android:textSize="24sp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.09" />

        <ImageButton
            android:id="@+id/loadFileButtonCP"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_marginStart="180dp"
            android:layout_marginTop="16dp"
            android:layout_marginEnd="182dp"
            android:layout_marginBottom="93dp"
            android:adjustViewBounds="true"
            android:contentDescription="@string/empty_string_text"
            android:scaleType="fitCenter"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:srcCompat="@drawable/load_image"
            tools:ignore="SpeakableTextPresentCheck" />

        <ToggleButton
            android:id="@+id/toolbarButtonCP"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_marginStart="16dp"
            android:layout_marginTop="86dp"
            android:layout_marginEnd="346dp"
            android:layout_marginBottom="23dp"
            android:contentDescription="@string/empty_string_text"
            android:textOff="@string/toolbar_togglebutton_text"
            android:textOn="@string/toolbar_togglebutton_text"
            android:textSize="10sp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <ImageButton
            android:id="@+id/submitFileCP"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_marginStart="346dp"
            android:layout_marginTop="16dp"
            android:layout_marginEnd="16dp"
            android:layout_marginBottom="93dp"
            android:adjustViewBounds="true"
            android:contentDescription="@string/empty_string_text"
            android:scaleType="fitCenter"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:srcCompat="@drawable/upload_image"
            tools:ignore="SpeakableTextPresentCheck,ImageContrastCheck" />

        <ImageButton
            android:id="@+id/saveFileCP"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_marginStart="264dp"
            android:layout_marginTop="16dp"
            android:layout_marginEnd="98dp"
            android:layout_marginBottom="93dp"
            android:adjustViewBounds="true"
            android:contentDescription="@string/empty_string_text"
            android:scaleType="fitCenter"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:srcCompat="@drawable/save_image"
            tools:ignore="SpeakableTextPresentCheck,ImageContrastCheck" />

        <ImageButton
            android:id="@+id/newCanvasButtonCP"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_marginStart="98dp"
            android:layout_marginTop="16dp"
            android:layout_marginEnd="264dp"
            android:layout_marginBottom="93dp"
            android:adjustViewBounds="true"
            android:contentDescription="@string/empty_string_text"
            android:scaleType="fitCenter"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:srcCompat="@drawable/new_game_image"
            tools:ignore="SpeakableTextPresentCheck"
            tools:srcCompat="@drawable/new_game_image" />

        <ImageButton
            android:id="@+id/backButtonCP"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_marginStart="16dp"
            android:layout_marginTop="16dp"
            android:layout_marginEnd="346dp"
            android:layout_marginBottom="93dp"
            android:adjustViewBounds="true"
            android:contentDescription="@string/empty_string_text"
            android:scaleType="fitCenter"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:srcCompat="@drawable/back_image"
            tools:ignore="SpeakableTextPresentCheck" />

    </androidx.constraintlayout.widget.ConstraintLayout>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/canvasLayoutCP"
        android:layout_width="411dp"
        android:layout_height="411dp"
        android:layout_marginTop="160dp"
        android:layout_marginBottom="160dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <view
            android:id="@+id/drawingViewCP"
            class="com.example.pic_chess.ChessPicActivity$DrawingView"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="#ffffff"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.0" />

    </androidx.constraintlayout.widget.ConstraintLayout>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/piecePickerLayoutCP"
        android:layout_width="411dp"
        android:layout_height="100dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/canvasLayoutCP">

        <ImageView
            android:id="@+id/pieceBishopCP"
            android:layout_width="67dp"
            android:layout_height="67dp"
            android:layout_marginStart="4dp"
            android:layout_marginBottom="33dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toStartOf="@+id/pieceKnightCP"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:srcCompat="@drawable/whitebishop" />

        <ImageView
            android:id="@+id/piecePawnCP"
            android:layout_width="67dp"
            android:layout_height="67dp"
            android:layout_marginBottom="33dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toStartOf="@+id/pieceRookCP"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.0"
            app:srcCompat="@drawable/whitepawn" />

        <ImageView
            android:id="@+id/pieceRookCP"
            android:layout_width="67dp"
            android:layout_height="67dp"
            android:layout_marginBottom="33dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toStartOf="@+id/pieceKingCP"
            app:layout_constraintTop_toTopOf="parent"
            app:srcCompat="@drawable/whiterook" />

        <ImageView
            android:id="@+id/pieceKingCP"
            android:layout_width="67dp"
            android:layout_height="67dp"
            android:layout_marginBottom="33dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toStartOf="@+id/pieceQueenCP"
            app:layout_constraintTop_toTopOf="parent"
            app:srcCompat="@drawable/whiteking" />

        <ImageView
            android:id="@+id/pieceQueenCP"
            android:layout_width="67dp"
            android:layout_height="67dp"
            android:layout_marginEnd="4dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.0"
            app:srcCompat="@drawable/whitequeen" />

        <ImageView
            android:id="@+id/pieceKnightCP"
            android:layout_width="67dp"
            android:layout_height="67dp"
            android:layout_marginBottom="33dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toStartOf="@+id/piecePawnCP"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.0"
            app:srcCompat="@drawable/whiteknight" />

        <TextView
            android:id="@+id/bishopPieceNumber"
            android:layout_width="67dp"
            android:layout_height="33dp"
            android:layout_marginStart="4dp"
            android:text="4"
            android:textAlignment="center"
            android:textSize="24sp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toStartOf="@+id/knightPieceNumber"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/pieceBishopCP" />

        <TextView
            android:id="@+id/knightPieceNumber"
            android:layout_width="67dp"
            android:layout_height="33dp"
            android:text="4"
            android:textAlignment="center"
            android:textSize="24sp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toStartOf="@+id/pawnPieceNumber"
            app:layout_constraintTop_toBottomOf="@+id/pieceKnightCP" />

        <TextView
            android:id="@+id/pawnPieceNumber"
            android:layout_width="67dp"
            android:layout_height="33dp"
            android:text="4"
            android:textAlignment="center"
            android:textSize="24sp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toStartOf="@+id/rookPieceNumber"
            app:layout_constraintTop_toBottomOf="@+id/piecePawnCP" />

        <TextView
            android:id="@+id/rookPieceNumber"
            android:layout_width="67dp"
            android:layout_height="33dp"
            android:text="4"
            android:textAlignment="center"
            android:textSize="24sp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toStartOf="@+id/kingPieceNumber"
            app:layout_constraintTop_toBottomOf="@+id/pieceRookCP" />

        <TextView
            android:id="@+id/kingPieceNumber"
            android:layout_width="67dp"
            android:layout_height="33dp"
            android:text="4"
            android:textAlignment="center"
            android:textSize="24sp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toStartOf="@+id/queenPieceNumber"
            app:layout_constraintTop_toBottomOf="@+id/pieceKingCP" />

        <TextView
            android:id="@+id/queenPieceNumber"
            android:layout_width="67dp"
            android:layout_height="33dp"
            android:layout_marginEnd="4dp"
            android:text="4"
            android:textAlignment="center"
            android:textSize="24sp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/pieceQueenCP" />

    </androidx.constraintlayout.widget.ConstraintLayout>

    <FrameLayout
        android:id="@+id/newCanvasPromptFragmentContainer"
        android:layout_width="321dp"
        android:layout_height="149dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"/>

    <FrameLayout
        android:id="@+id/toolbarFragmentContainer"
        android:layout_width="318dp"
        android:layout_height="159dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.0" />

</androidx.constraintlayout.widget.ConstraintLayout>