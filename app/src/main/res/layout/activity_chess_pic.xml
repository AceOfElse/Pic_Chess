<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/chessPicLayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:alpha="0.9"
    android:background="@color/black"
    android:textAlignment="center"
    tools:context=".ChessPicActivity">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/buttonLayoutCP"
        android:layout_width="411dp"
        android:layout_height="162dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.0">

        <ImageButton
            android:id="@+id/loadFileButtonCP"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_marginStart="180dp"
            android:layout_marginTop="16dp"
            android:layout_marginEnd="180dp"
            android:layout_marginBottom="96dp"
            android:adjustViewBounds="true"
            android:contentDescription="@string/empty_string_text"
            android:scaleType="fitCenter"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:srcCompat="@drawable/load_image"
            tools:ignore="SpeakableTextPresentCheck" />

        <ImageButton
            android:id="@+id/submitFileCP"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_marginStart="346dp"
            android:layout_marginTop="16dp"
            android:layout_marginEnd="15dp"
            android:layout_marginBottom="96dp"
            android:adjustViewBounds="true"
            android:contentDescription="@string/empty_string_text"
            android:scaleType="fitCenter"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:srcCompat="@drawable/upload_image"
            tools:ignore="SpeakableTextPresentCheck,ImageContrastCheck" />

        <ToggleButton
            android:id="@+id/toolbarButtonCP"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_marginStart="16dp"
            android:layout_marginTop="86dp"
            android:layout_marginEnd="345dp"
            android:layout_marginBottom="26dp"
            android:contentDescription="@string/empty_string_text"
            android:textOff="@string/toolbar_togglebutton_text"
            android:textOn="@string/toolbar_togglebutton_text"
            android:textSize="10sp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <ImageButton
            android:id="@+id/saveFileCP"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_marginStart="264dp"
            android:layout_marginTop="16dp"
            android:layout_marginEnd="97dp"
            android:layout_marginBottom="96dp"
            android:adjustViewBounds="true"
            android:contentDescription="@string/empty_string_text"
            android:scaleType="fitCenter"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:srcCompat="@drawable/save_image"
            tools:ignore="SpeakableTextPresentCheck,ImageContrastCheck" />

        <ImageButton
            android:id="@+id/newCanvasButtonCP"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_marginStart="98dp"
            android:layout_marginTop="16dp"
            android:layout_marginEnd="263dp"
            android:layout_marginBottom="96dp"
            android:adjustViewBounds="true"
            android:contentDescription="@string/empty_string_text"
            android:scaleType="fitCenter"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:srcCompat="@drawable/new_game_image"
            tools:ignore="SpeakableTextPresentCheck"
            tools:srcCompat="@drawable/new_game_image" />

        <EditText
            android:id="@+id/hintTextField"
            android:layout_width="298dp"
            android:layout_height="50dp"
            android:layout_marginStart="98dp"
            android:layout_marginTop="85dp"
            android:layout_marginEnd="15dp"
            android:layout_marginBottom="27dp"
            android:autofillHints=""
            android:ems="10"
            android:hint="@string/hint_text_field"
            android:inputType="textPersonName"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <ImageButton
            android:id="@+id/backButtonCP"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_marginStart="16dp"
            android:layout_marginTop="16dp"
            android:layout_marginEnd="345dp"
            android:layout_marginBottom="96dp"
            android:adjustViewBounds="true"
            android:contentDescription="@string/empty_string_text"
            android:scaleType="fitCenter"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:srcCompat="@drawable/back_image"
            tools:ignore="SpeakableTextPresentCheck" />
    </androidx.constraintlayout.widget.ConstraintLayout>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/canvasLayoutCP"
        android:layout_width="411dp"
        android:layout_height="411dp"
        android:layout_marginTop="160dp"
        android:layout_marginBottom="160dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <View
            android:id="@+id/canvas_view"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />
    </androidx.constraintlayout.widget.ConstraintLayout>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/piecePickerLayout"
        android:layout_width="411dp"
        android:layout_height="100dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/canvasLayoutCP">

        <ImageView
            android:id="@+id/pieceBishopCP"
            android:layout_width="67dp"
            android:layout_height="67dp"
            android:layout_marginStart="4dp"
            android:layout_marginBottom="33dp"
            android:longClickable="true"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toStartOf="@+id/pieceKnightCP"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:srcCompat="@drawable/whitebishop"
            tools:ignore="SpeakableTextPresentCheck" />

        <ImageView
            android:id="@+id/piecePawnCP"
            android:layout_width="67dp"
            android:layout_height="67dp"
            android:layout_marginBottom="33dp"
            android:longClickable="true"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toStartOf="@+id/pieceRookCP"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.0"
            app:srcCompat="@drawable/whitepawn"
            tools:ignore="SpeakableTextPresentCheck" />

        <ImageView
            android:id="@+id/pieceRookCP"
            android:layout_width="67dp"
            android:layout_height="67dp"
            android:layout_marginBottom="33dp"
            android:longClickable="true"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toStartOf="@+id/pieceKingCP"
            app:layout_constraintTop_toTopOf="parent"
            app:srcCompat="@drawable/whiterook"
            tools:ignore="SpeakableTextPresentCheck" />

        <ImageView
            android:id="@+id/pieceKingCP"
            android:layout_width="67dp"
            android:layout_height="67dp"
            android:layout_marginBottom="33dp"
            android:longClickable="true"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toStartOf="@+id/pieceQueenCP"
            app:layout_constraintTop_toTopOf="parent"
            app:srcCompat="@drawable/whiteking"
            tools:ignore="SpeakableTextPresentCheck" />

        <ImageView
            android:id="@+id/pieceQueenCP"
            android:layout_width="67dp"
            android:layout_height="67dp"
            android:layout_marginEnd="4dp"
            android:longClickable="true"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.0"
            app:srcCompat="@drawable/whitequeen"
            tools:ignore="SpeakableTextPresentCheck" />

        <ImageView
            android:id="@+id/pieceKnightCP"
            android:layout_width="67dp"
            android:layout_height="67dp"
            android:layout_marginBottom="33dp"
            android:longClickable="true"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toStartOf="@+id/piecePawnCP"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.0"
            app:srcCompat="@drawable/whiteknight"
            tools:ignore="SpeakableTextPresentCheck" />

        <TextView
            android:id="@+id/bishopPieceNumber"
            android:layout_width="67dp"
            android:layout_height="33dp"
            android:layout_marginStart="4dp"
            android:text="4"
            android:textAlignment="center"
            android:textSize="24sp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toStartOf="@+id/knightPieceNumber"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/pieceBishopCP" />

        <TextView
            android:id="@+id/knightPieceNumber"
            android:layout_width="67dp"
            android:layout_height="33dp"
            android:text="4"
            android:textAlignment="center"
            android:textSize="24sp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toStartOf="@+id/pawnPieceNumber"
            app:layout_constraintTop_toBottomOf="@+id/pieceKnightCP" />

        <TextView
            android:id="@+id/pawnPieceNumber"
            android:layout_width="67dp"
            android:layout_height="33dp"
            android:text="4"
            android:textAlignment="center"
            android:textSize="24sp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toStartOf="@+id/rookPieceNumber"
            app:layout_constraintTop_toBottomOf="@+id/piecePawnCP" />

        <TextView
            android:id="@+id/rookPieceNumber"
            android:layout_width="67dp"
            android:layout_height="33dp"
            android:text="4"
            android:textAlignment="center"
            android:textSize="24sp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toStartOf="@+id/kingPieceNumber"
            app:layout_constraintTop_toBottomOf="@+id/pieceRookCP" />

        <TextView
            android:id="@+id/kingPieceNumber"
            android:layout_width="67dp"
            android:layout_height="33dp"
            android:text="4"
            android:textAlignment="center"
            android:textSize="24sp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toStartOf="@+id/queenPieceNumber"
            app:layout_constraintTop_toBottomOf="@+id/pieceKingCP" />

        <TextView
            android:id="@+id/queenPieceNumber"
            android:layout_width="67dp"
            android:layout_height="33dp"
            android:layout_marginEnd="4dp"
            android:text="4"
            android:textAlignment="center"
            android:textSize="24sp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/pieceQueenCP" />

    </androidx.constraintlayout.widget.ConstraintLayout>

    <FrameLayout
        android:id="@+id/newCanvasPromptFragmentContainer"
        android:layout_width="321dp"
        android:layout_height="149dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

    </FrameLayout>

</androidx.constraintlayout.widget.ConstraintLayout>