<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/colorLayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/material_dynamic_neutral40"
    tools:context=".ColorFragment">

    <ToggleButton
        android:id="@+id/purpleColorButton"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="109dp"
        android:layout_marginTop="58dp"
        android:layout_marginBottom="93dp"
        android:contentDescription="@string/empty_string_text" />

    <ToggleButton
        android:id="@+id/yellowColorButton"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="57dp"
        android:layout_marginTop="59dp"
        android:layout_marginBottom="93dp"
        android:contentDescription="@string/empty_string_text" />

    <ToggleButton
        android:id="@+id/greenColorButton"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="6dp"
        android:layout_marginTop="58dp"
        android:layout_marginBottom="93dp"
        android:contentDescription="@string/empty_string_text" />

    <ToggleButton
        android:id="@+id/blackColorButton"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="7dp"
        android:layout_marginTop="7dp"
        android:layout_marginBottom="93dp"
        android:contentDescription="@string/empty_string_text" />

    <ToggleButton
        android:id="@+id/redColorButton"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="58dp"
        android:layout_marginTop="7dp"
        android:layout_marginBottom="93dp"
        android:contentDescription="@string/empty_string_text" />

    <ToggleButton
        android:id="@+id/blueColorButton"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="109dp"
        android:layout_marginTop="7dp"
        android:layout_marginBottom="93dp"
        android:contentDescription="@string/empty_string_text" />

    <EditText
        android:id="@+id/rTextField"
        android:layout_width="28dp"
        android:layout_height="31dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="28dp"
        android:layout_marginTop="108dp"
        android:ems="10"
        android:inputType="number" />

    <EditText
        android:id="@+id/gTextField"
        android:layout_width="28dp"
        android:layout_height="29dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="80dp"
        android:layout_marginTop="109dp"
        android:ems="10"
        android:inputType="number" />

    <EditText
        android:id="@+id/bTextField"
        android:layout_width="28dp"
        android:layout_height="29dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="132dp"
        android:layout_marginTop="109dp"
        android:ems="10"
        android:inputType="number" />

    <TextView
        android:id="@+id/rTextView"
        android:layout_width="18dp"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="7dp"
        android:layout_marginTop="113dp"
        android:text="R"
        android:textSize="16sp" />

    <TextView
        android:id="@+id/gTextView"
        android:layout_width="18dp"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="60dp"
        android:layout_marginTop="112dp"
        android:text="G"
        android:textSize="16sp" />

    <TextView
        android:id="@+id/bTextView"
        android:layout_width="18dp"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="111dp"
        android:layout_marginTop="112dp"
        android:text="B"
        android:textSize="16sp" />
</RelativeLayout>