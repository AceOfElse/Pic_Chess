<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/winningLayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/black"
    tools:context=".WinnerFragment">

    <TextView
        android:id="@+id/winnerText"
        android:layout_width="340dp"
        android:layout_height="98dp"
        android:textAlignment="center"
        android:textColor="@color/white"
        android:textSize="60sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.004" />

    <ImageView
        android:id="@+id/winnerImage"
        android:layout_width="130dp"
        android:layout_height="120dp"
        android:background="@color/white"
        app:layout_constraintEnd_toEndOf="@+id/winnerText"
        app:layout_constraintHorizontal_bias="0.488"
        app:layout_constraintStart_toStartOf="@+id/winnerText"
        app:layout_constraintTop_toBottomOf="@+id/winnerText" />

    <Button
        android:id="@+id/newButton"
        android:layout_width="121dp"
        android:layout_height="60dp"
        android:layout_marginTop="20dp"
        android:background="@color/white"
        android:text="@string/new_button_text"
        android:textColor="@color/black"
        android:textSize="20sp"
        app:layout_constraintEnd_toStartOf="@+id/reaturnButton"
        app:layout_constraintStart_toStartOf="@+id/winnerText"
        app:layout_constraintTop_toBottomOf="@+id/winnerImage" />

    <Button
        android:id="@+id/reaturnButton"
        android:layout_width="125dp"
        android:layout_height="60dp"
        android:layout_marginTop="20dp"
        android:background="@color/white"
        android:text="@string/return_button_text"
        android:textColor="@color/black"
        android:textSize="20sp"
        app:layout_constraintEnd_toEndOf="@+id/winnerText"
        app:layout_constraintStart_toEndOf="@+id/newButton"
        app:layout_constraintTop_toBottomOf="@+id/winnerImage" />
</androidx.constraintlayout.widget.ConstraintLayout>