<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/chessPicLayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:alpha="0.9"
    android:background="@color/black"
    android:textAlignment="center"
    android:orientation="horizontal"
    tools:context=".ChessPicActivity">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/buttonLayoutCP"
        android:layout_width="141dp"
        android:layout_height="798dp"
        android:layout_marginTop="2dp"
        android:layout_marginEnd="1139dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <ImageButton
            android:id="@+id/loadFileButtonCP"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_marginStart="180dp"
            android:layout_marginTop="16dp"
            android:layout_marginEnd="182dp"
            android:layout_marginBottom="93dp"
            android:adjustViewBounds="true"
            android:contentDescription="@string/empty_string_text"
            android:scaleType="fitCenter"
            android:visibility="gone"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:srcCompat="@drawable/load_image"
            tools:ignore="SpeakableTextPresentCheck" />

        <ImageButton
            android:id="@+id/submitFileCP"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_marginStart="346dp"
            android:layout_marginTop="16dp"
            android:layout_marginEnd="16dp"
            android:layout_marginBottom="93dp"
            android:adjustViewBounds="true"
            android:contentDescription="@string/empty_string_text"
            android:scaleType="fitCenter"
            android:visibility="gone"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:srcCompat="@drawable/upload_image"
            tools:ignore="SpeakableTextPresentCheck,ImageContrastCheck" />

        <ImageButton
            android:id="@+id/backButtonCP"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:layout_marginStart="33dp"
            android:layout_marginTop="29dp"
            android:layout_marginEnd="29dp"
            android:layout_marginBottom="681dp"
            android:adjustViewBounds="true"
            android:contentDescription="@string/empty_string_text"
            android:scaleType="fitCenter"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:srcCompat="@drawable/back_image"
            tools:ignore="SpeakableTextPresentCheck" />

        <ImageButton
            android:id="@+id/newCanvasButtonCP"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:layout_marginStart="32dp"
            android:layout_marginTop="142dp"
            android:layout_marginEnd="30dp"
            android:layout_marginBottom="568dp"
            android:adjustViewBounds="true"
            android:contentDescription="@string/empty_string_text"
            android:scaleType="fitCenter"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:srcCompat="@drawable/new_game_image"
            tools:ignore="SpeakableTextPresentCheck"
            tools:srcCompat="@drawable/new_game_image" />

        <ImageButton
            android:id="@+id/saveFileCP"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:layout_marginStart="33dp"
            android:layout_marginTop="681dp"
            android:layout_marginEnd="28dp"
            android:layout_marginBottom="37dp"
            android:adjustViewBounds="true"
            android:contentDescription="@string/empty_string_text"
            android:scaleType="fitCenter"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:srcCompat="@drawable/save_image"
            tools:ignore="SpeakableTextPresentCheck,ImageContrastCheck" />

        <ToggleButton
            android:id="@+id/toolbarButtonCP"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:layout_marginStart="33dp"
            android:layout_marginTop="260dp"
            android:layout_marginEnd="29dp"
            android:layout_marginBottom="450dp"
            android:checked="false"
            android:contentDescription="@string/empty_string_text"
            android:textOff="@string/toolbar_togglebutton_text"
            android:textOn="@string/toolbar_togglebutton_text"
            android:textSize="10sp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/timerTextCP"
            android:layout_width="91dp"
            android:layout_height="227dp"
            android:textAlignment="center"
            android:textAllCaps="true"
            android:textColor="@color/white"
            android:textSize="40sp"
            android:textStyle="bold"
            android:visibility="visible"
            tools:layout_editor_absoluteX="28dp"
            tools:layout_editor_absoluteY="396dp" />

    </androidx.constraintlayout.widget.ConstraintLayout>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/canvasLayoutCP"
        android:layout_width="722dp"
        android:layout_height="722dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.444"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <view
            android:id="@+id/drawingViewCP"
            class="com.example.pic_chess.ChessPicActivity$DrawingView"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="#ffffff"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.0" />

        <ImageView
            android:id="@+id/brushView"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:layout_marginStart="88dp"
            android:layout_marginTop="252dp"
            android:visibility="invisible"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/pixelCountText"
            android:layout_width="67dp"
            android:layout_height="50dp"
            android:textColor="@color/black"
            android:textStyle="bold"
            app:layout_constraintBottom_toBottomOf="@+id/brushView"
            app:layout_constraintStart_toEndOf="@+id/brushView"
            app:layout_constraintTop_toTopOf="@+id/brushView"
            app:layout_constraintVertical_bias="0.0" />

    </androidx.constraintlayout.widget.ConstraintLayout>

    <FrameLayout
        android:id="@+id/toolbarFragmentContainer"
        android:layout_width="240dp"
        android:layout_height="489dp"
        android:visibility="gone"
        tools:layout_editor_absoluteX="-3dp"
        tools:layout_editor_absoluteY="-3dp" />

    <ImageView
        android:id="@+id/pieceBishopCP"
        android:layout_width="134dp"
        android:layout_height="134dp"
        android:layout_marginStart="84dp"
        app:layout_constraintStart_toEndOf="@+id/canvasLayoutCP"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/whitebishop" />

    <TextView
        android:id="@+id/kingPieceNumber"
        android:layout_width="71dp"
        android:layout_height="133dp"
        android:layout_marginTop="3dp"
        android:textAlignment="center"
        android:textSize="24sp"
        app:layout_constraintStart_toEndOf="@+id/pieceKingCP"
        app:layout_constraintTop_toBottomOf="@+id/rookPieceNumber" />

    <ImageView
        android:id="@+id/pieceKingCP"
        android:layout_width="134dp"
        android:layout_height="134dp"
        android:layout_marginStart="84dp"
        app:layout_constraintStart_toEndOf="@+id/canvasLayoutCP"
        app:layout_constraintTop_toBottomOf="@+id/pieceRookCP"
        app:srcCompat="@drawable/whiteking" />

    <ImageView
        android:id="@+id/pieceKnightCP"
        android:layout_width="134dp"
        android:layout_height="134dp"
        android:layout_marginStart="84dp"
        app:layout_constraintStart_toEndOf="@+id/canvasLayoutCP"
        app:layout_constraintTop_toBottomOf="@+id/pieceBishopCP"
        app:srcCompat="@drawable/whiteknight" />

    <TextView
        android:id="@+id/rookPieceNumber"
        android:layout_width="71dp"
        android:layout_height="135dp"
        android:textAlignment="center"
        android:textSize="24sp"
        app:layout_constraintStart_toEndOf="@+id/pieceRookCP"
        app:layout_constraintTop_toBottomOf="@+id/pawnPieceNumber" />

    <TextView
        android:id="@+id/pawnPieceNumber"
        android:layout_width="70dp"
        android:layout_height="132dp"
        android:textAlignment="center"
        android:textSize="24sp"
        app:layout_constraintStart_toEndOf="@+id/piecePawnCP"
        app:layout_constraintTop_toBottomOf="@+id/knightPieceNumber" />

    <ImageView
        android:id="@+id/pieceRookCP"
        android:layout_width="134dp"
        android:layout_height="134dp"
        android:layout_marginStart="84dp"
        app:layout_constraintStart_toEndOf="@+id/canvasLayoutCP"
        app:layout_constraintTop_toBottomOf="@+id/piecePawnCP"
        app:srcCompat="@drawable/whiterook" />

    <ImageView
        android:id="@+id/pieceQueenCP"
        android:layout_width="134dp"
        android:layout_height="134dp"
        android:layout_marginStart="84dp"
        app:layout_constraintStart_toEndOf="@+id/canvasLayoutCP"
        app:layout_constraintTop_toBottomOf="@+id/pieceKingCP"
        app:srcCompat="@drawable/whitequeen" />

    <TextView
        android:id="@+id/knightPieceNumber"
        android:layout_width="70dp"
        android:layout_height="134dp"
        android:rotation="0"
        android:textAlignment="center"
        android:textSize="24sp"
        app:layout_constraintStart_toEndOf="@+id/pieceKnightCP"
        app:layout_constraintTop_toBottomOf="@+id/bishopPieceNumber" />

    <ImageView
        android:id="@+id/piecePawnCP"
        android:layout_width="134dp"
        android:layout_height="134dp"
        android:layout_marginStart="84dp"
        app:layout_constraintStart_toEndOf="@+id/canvasLayoutCP"
        app:layout_constraintTop_toBottomOf="@+id/pieceKnightCP"
        app:srcCompat="@drawable/whitepawn" />

    <TextView
        android:id="@+id/queenPieceNumber"
        android:layout_width="71dp"
        android:layout_height="133dp"
        android:textAlignment="center"
        android:textSize="24sp"
        app:layout_constraintStart_toEndOf="@+id/pieceQueenCP"
        app:layout_constraintTop_toBottomOf="@+id/kingPieceNumber" />

    <TextView
        android:id="@+id/bishopPieceNumber"
        android:layout_width="70dp"
        android:layout_height="133dp"
        android:textAlignment="center"
        android:textSize="24sp"
        app:layout_constraintStart_toEndOf="@+id/pieceBishopCP"
        app:layout_constraintTop_toTopOf="parent" />

    <FrameLayout
        android:id="@+id/colorFragmentContainer"
        android:layout_width="242dp"
        android:layout_height="311dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:visibility="gone"
        tools:layout_editor_absoluteX="-5dp"
        tools:layout_editor_absoluteY="486dp">

    </FrameLayout>

    <TextView
        android:id="@+id/descriptionText"
        android:layout_width="726dp"
        android:layout_height="79dp"
        android:autofillHints=""
        android:ems="10"
        android:text="@string/drawing_description_text"
        android:textAlignment="textStart"
        android:textColor="@color/white"
        android:textSize="48sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.444"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/canvasLayoutCP" />

</androidx.constraintlayout.widget.ConstraintLayout>