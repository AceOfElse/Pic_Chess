<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/colorLayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    tools:context=".ColorFragment">

    <ToggleButton
        android:id="@+id/purpleColorButton"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:contentDescription="@string/empty_string_text"
        android:textOff=""
        android:textOn=""
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toEndOf="@+id/yellowColorButton"
        app:layout_constraintTop_toTopOf="parent" />

    <ToggleButton
        android:id="@+id/yellowColorButton"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:contentDescription="@string/empty_string_text"
        android:textOff=""
        android:textOn=""
        app:layout_constraintEnd_toStartOf="@+id/purpleColorButton"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toEndOf="@+id/greenColorButton"
        app:layout_constraintTop_toTopOf="parent" />

    <ToggleButton
        android:id="@+id/greenColorButton"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:contentDescription="@string/empty_string_text"
        android:textOff=""
        android:textOn=""
        app:layout_constraintEnd_toStartOf="@+id/yellowColorButton"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toEndOf="@+id/blueColorButton"
        app:layout_constraintTop_toTopOf="parent" />

    <ToggleButton
        android:id="@+id/blackColorButton"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:contentDescription="@string/empty_string_text"
        android:textOff=""
        android:textOn=""
        app:layout_constraintEnd_toStartOf="@+id/redColorButton"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ToggleButton
        android:id="@+id/redColorButton"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:contentDescription="@string/empty_string_text"
        android:textOff=""
        android:textOn=""
        app:layout_constraintEnd_toStartOf="@+id/blueColorButton"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toEndOf="@+id/blackColorButton"
        app:layout_constraintTop_toTopOf="parent" />

    <ToggleButton
        android:id="@+id/blueColorButton"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:contentDescription="@string/empty_string_text"
        android:textOff=""
        android:textOn=""
        app:layout_constraintEnd_toStartOf="@+id/greenColorButton"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toEndOf="@+id/redColorButton"
        app:layout_constraintTop_toTopOf="parent" />

    <EditText
        android:id="@+id/rTextField"
        android:layout_width="18dp"
        android:layout_height="26dp"
        android:layout_marginStart="59dp"
        android:layout_marginTop="59dp"
        android:ems="10"
        android:inputType="number"
        android:visibility="gone"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <EditText
        android:id="@+id/gTextField"
        android:layout_width="19dp"
        android:layout_height="26dp"
        android:layout_marginStart="99dp"
        android:layout_marginTop="61dp"
        android:ems="10"
        android:inputType="number"
        android:visibility="gone"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <EditText
        android:id="@+id/bTextField"
        android:layout_width="18dp"
        android:layout_height="24dp"
        android:layout_marginStart="143dp"
        android:layout_marginTop="62dp"
        android:ems="10"
        android:inputType="number"
        android:visibility="gone"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/rTextView"
        android:layout_width="18dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="39dp"
        android:layout_marginTop="62dp"
        android:text="R"
        android:textSize="16sp"
        android:visibility="gone"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/gTextView"
        android:layout_width="18dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="78dp"
        android:layout_marginTop="62dp"
        android:text="G"
        android:textSize="16sp"
        android:visibility="gone"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/bTextView"
        android:layout_width="18dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="121dp"
        android:layout_marginTop="63dp"
        android:text="B"
        android:textSize="16sp"
        android:visibility="gone"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageButton
        android:id="@+id/applyButton"
        android:layout_width="74dp"
        android:layout_height="31dp"
        android:layout_marginStart="166dp"
        android:layout_marginTop="61dp"
        android:visibility="gone"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />
</androidx.constraintlayout.widget.ConstraintLayout>